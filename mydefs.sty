% An operator command         {{{2

\def\cmdOper#1#2{
  \noindent
  \hbox to \hsize {% This comment is needed to remove space at start of line
    \vtop{
      % \leftskip=0cm plus 150fil
        \hbox to 3.5cm {
      \hfil
      % \hfuzz = 5pt
      % \hskip 10pt
      \hsize=10em
      \noindent{#1}
      \hfil
      }
      %\hrule
    }% This comment is needed to remove space
    \hfil	% absorb extra space b/w columns
    \vtop{
      \hsize=4.90cm
      \hbox{\hfuzz = 15pt \vtop{
      % Uncomment line below to right-align description
      %\leftskip=0cm plus 150fil
      {#2}
      }}
      %\hrule
    }
  }
  %\hrule
  \par
  \vskip 0.14cm
  }

% An long operator command    {{{2

\def\cmdOperL#1#2{
    \noindent
    \vbox{
        \hbox {% This comment is needed to remove space at start of line
            % \leftskip=0cm plus 150fil
            \hfil
            % \hfuzz = 5pt
            \hsize=10em
            \noindent{#1}
            \hfil
            % \hskip 2ex
            %\hrule
        }% This comment is needed to remove space
        \hfil	% absorb extra space b/w columns
        % \hsize=4.90cm
        \hskip 7em
        \vtop{
            \hbox{
                % Uncomment line below to right-align description
                %\leftskip=0cm plus 150fil
                {#2}
            }
            %\hrule
        }
    }
    %\hrule
    \par
    \vskip 0.14cm
}

