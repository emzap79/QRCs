    \hfil	% absorb extra space b/w columns
    \vtop{
      \hsize=5.90cm
      \hbox{\hfuzz = 15pt \vtop{
      % Uncomment line below to right-align description
      %\leftskip=0cm plus 150fil
      {#2}
      }}
      %\hrule
    }
  }
  %\hrule
  \par
  \vskip 0.14cm
}

