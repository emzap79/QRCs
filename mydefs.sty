% A short command%{{{

\def\cmdS#1#2{
  \noindent
  \hbox to \hsize {%
    \vtop{
      \hbox to 2.4cm {
        \noindent\cmd{#1}\dotfill
      }
      %\hrule
    }%
    \hfil	% absorb extra space b/w columns
    \vtop{
      \hsize=5.90cm
      \hbox{\hfuzz = 15pt \vtop{
      {#2}
      }}
      %\hrule
    }
  }
  %\hrule
  \par
  \vskip 0.14cm
}

%}}}
% A long command%{{{

\def\cmdL#1#2{
  \vbox {
      \hbox to \hsize{
          \cmd{#1}
        \hfil
        % \dotfill
        % \hskip 20em
    }%
    \hskip 2.5cm  % indent for description
    \hbox to 5.9cm {%
      \hfuzz = 5pt
      \hfil
      \hsize=5.9cm
      \vtop{
        {#2}
        }}
  }%
  % \par
  \vskip 0.14cm
}

%}}}
