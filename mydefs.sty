  \vskip 0.14cm
}

% A very short command%       {{{2

\def\cnd#1{\hfill$\lfloor$ #1\par}

% A very long option          {{{2

\def\cmdOptLl#1#2{
    \hsize=8.5cm
    \vbox {
        \hbox{
      \hskip 15pt
      \noindent\cmd{\tt--#1}
      \hfil
        }%
        \hskip 70pt  % indent for description
        \hbox to 5.9cm {%
            \hfuzz = 5pt
            \hfil
            \hsize=5.9cm
            \vtop{
                {#2}
            }}
    }%
    %\hrule
    \par
    \vskip 0.14cm
}

