% A very long option%{{{

\def\cmdOptLl#1#2{
    \hsize=8.5cm
    \vbox {
        \hbox{
      \hskip 15pt
      \noindent\cmd{\tt--#1}
      \hfil
        }%
        \hskip 70pt  % indent for description
        \hbox to 5.9cm {%
            \hfuzz = 5pt
            \hfil
            \hsize=5.9cm
            \vtop{
                {#2}
            }}
    }%
    %\hrule
    \par
    \vskip 0.14cm
}

